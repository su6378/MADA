                            android:text="@string/home_today_left_title"
                            android:textColor="@color/gray"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_today_left_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/pretendard_semibold"
                            android:textSize="20sp"
                            android:text="@{vm.state.todayBudgetComment}"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_today_left_title" />

                        <TextView
                            android:id="@+id/tv_home_today_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:fontFamily="@font/pretendard_semibold"
                            android:text="@{vm.state.todayProgressText}"
                            android:textColor="@color/nh_green"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@id/tv_today_left_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tv_today_left_content" />

                        <ProgressBar
                            android:id="@+id/progress_home"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="12dp"
                            android:max="100"
                            android:progress="@{vm.state.todayProgress}"
                            android:progressDrawable="@drawable/progress_home"
                            app:layout_constraintTop_toBottomOf="@id/tv_today_left_content" />

                        <TextView
                            android:id="@+id/tv_home_today_budget_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="16dp"
                            android:fontFamily="@font/pretendard_medium"
                            android:text="@string/home_today_budget"
                            android:textColor="@color/gray"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/progress_home"
                            app:layout_constraintVertical_bias="0" />

                        <TextView
                            android:id="@+id/tv_home_today_budget"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_marginEnd="20dp"
                            android:fontFamily="@font/pretendard_medium"
                            android:text="@{vm.state.todayBudget}"
                            android:textColor="@color/gray"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/progress_home" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_home_week_left_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12dp"
                    app:layout_constraintTop_toBottomOf="@id/cv_home_today_left_money"
                    app:onClick="@{() -> vm.navigateWeekSavingFragment()}"
                    app:strokeWidth="0dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_home_pig"
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:layout_marginVertical="14dp"
                            android:layout_marginStart="16dp"
                            android:src="@drawable/ic_pig"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_home_week_left_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/pretendard_medium"
                            android:text="@string/home_week_left_title"
                            android:textColor="@color/gray"
                            android:textSize="14sp"
                            app:layout_constraintStart_toEndOf="@id/iv_home_pig"
                            app:layout_constraintTop_toTopOf="@id/iv_home_pig" />

                        <TextView
                            android:id="@+id/tv_home_week_left_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/pretendard_semibold"
                            android:text="@{vm.state.weekLeftContent}"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="@id/iv_home_pig"
                            app:layout_constraintStart_toEndOf="@id/iv_home_pig"
                            app:layout_constraintTop_toBottomOf="@id/tv_home_week_left_title"
                            app:layout_constraintVertical_bias="1" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:src="@drawable/ic_next"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>


                </com.google.android.material.card.MaterialCardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    app:layout_constraintTop_toBottomOf="@id/cv_home_week_left_money" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>