<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.example.mada.feature.create_binder_save.CreateBinderSaveViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".feature.create_binder_save.CreateBinderSaveFragment">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_create_binder_save"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_back"
            app:title="@string/create_binder_save"
            app:titleCentered="true"
            app:titleTextAppearance="@style/ToolbarTitleText"
            app:titleTextColor="@color/black" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_create_binder_save"
            android:layout_width="wrap_content"
            android:layout_height="210dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_create_binder_save" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_create_binder_save_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:fontFamily="@font/pretendard_semibold"
            android:gravity="center"
            android:hint="@string/create_binder_save_name_hint"
            android:inputType="text"
            android:maxLength="14"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_create_binder_save" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_create_binder_pencil"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginVertical="2dp"
            android:layout_marginStart="6dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_pencil"
            app:layout_constraintBottom_toBottomOf="@id/et_create_binder_save_name"
            app:layout_constraintStart_toEndOf="@id/et_create_binder_save_name"
            app:layout_constraintTop_toTopOf="@id/et_create_binder_save_name" />

        <View
            android:id="@+id/baseline_create_binder_save"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:background="#B2ACAC"
            app:layout_constraintEnd_toEndOf="@id/iv_create_binder_pencil"
            app:layout_constraintStart_toStartOf="@id/et_create_binder_save_name"
            app:layout_constraintTop_toBottomOf="@id/et_create_binder_save_name" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_create_binder_cloud"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_binder_cloud"
            app:layout_constraintEnd_toStartOf="@id/iv_create_binder_heart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/baseline_create_binder_save"
            app:onClick="@{() -> vm.setSaveBinderImage(`cloud`)}" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_create_binder_heart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_binder_heart"
            app:layout_constraintEnd_toStartOf="@id/iv_create_binder_green"
            app:layout_constraintStart_toEndOf="@id/iv_create_binder_cloud"
            app:layout_constraintTop_toTopOf="@id/iv_create_binder_cloud"
            app:onClick="@{() -> vm.setSaveBinderImage(`heart`)}" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_create_binder_green"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_binder_green"
            app:layout_constraintEnd_toStartOf="@id/iv_create_binder_alle"
            app:layout_constraintStart_toEndOf="@id/iv_create_binder_heart"
            app:layout_constraintTop_toTopOf="@id/iv_create_binder_cloud"
            app:onClick="@{() -> vm.setSaveBinderImage(`green`)}" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_create_binder_alle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_binder_alle"
            app:layout_constraintBottom_toBottomOf="@id/iv_create_binder_cloud"
            app:layout_constraintEnd_toStartOf="@id/iv_create_binder_onee"
            app:layout_constraintStart_toEndOf="@id/iv_create_binder_green"
            app:layout_constraintTop_toTopOf="@id/iv_create_binder_cloud"
            app:onClick="@{() -> vm.setSaveBinderImage(`alle`)}" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_create_binder_onee"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_binder_onee"
            app:layout_constraintBottom_toBottomOf="@id/iv_create_binder_cloud"
            app:layout_constraintEnd_toStartOf="@id/iv_create_binder_ribbon"
            app:layout_constraintStart_toEndOf="@id/iv_create_binder_alle"
            app:layout_constraintTop_toTopOf="@id/iv_create_binder_cloud"
            app:onClick="@{() -> vm.setSaveBinderImage(`onee`)}" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_create_binder_ribbon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="40dp"
            android:src="@drawable/ic_binder_ribbon"
            app:layout_constraintBottom_toBottomOf="@id/iv_create_binder_cloud"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_create_binder_onee"
            app:layout_constraintTop_toTopOf="@id/iv_create_binder_cloud"
            app:onClick="@{() -> vm.setSaveBinderImage(`ribbon`)}" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_create_binder_save_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="30dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/iv_create_binder_cloud"
            app:strokeColor="@color/unselected_dot"
            app:strokeWidth="1dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_create_binder_save_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="18dp"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:text="@string/create_binder_save_target_amount"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_create_binder_save_amount_pencil"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_marginEnd="20dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_pencil"
                    app:layout_constraintBottom_toBottomOf="@id/tv_create_binder_save_won"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_create_binder_save_won"
                    app:tint="@color/black" />

                <TextView
                    android:id="@+id/tv_create_binder_save_won"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:text="@string/create_binder_save_target_won"
                    android:textSize="16sp"
                    android:visibility="invisible"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintBottom_toBottomOf="@id/et_create_binder_save_target_amount"
                    app:layout_constraintEnd_toStartOf="@id/iv_create_binder_save_amount_pencil"
                    app:layout_constraintTop_toTopOf="@id/et_create_binder_save_target_amount" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_create_binder_save_target_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:fontFamily="@font/pretendard_semibold"
                    android:hint="@string/create_binder_save_target_amount_hint"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="9"
                    android:textAlignment="textEnd"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_create_binder_save_won"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_create_binder_save_period"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:onClick="@{() -> vm.showNumberPicker()}"
            app:layout_constraintTop_toBottomOf="@id/cv_create_binder_save_amount"
            app:strokeColor="@color/unselected_dot"
            app:strokeWidth="1dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="18dp"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:text="@string/create_binder_save_target_period"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_create_binder_save_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_down"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_create_binder_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:text="@string/create_binder_save_target_period_hint"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/iv_create_binder_save_down"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginVertical="20dp"
            app:cardBackgroundColor="#F4FAF6"
            app:cardCornerRadius="12dp"
            app:layout_constraintBottom_toTopOf="@id/btn_setting"
            app:layout_constraintTop_toBottomOf="@id/cv_create_binder_save_period"
            app:layout_constraintVertical_bias="1"
            app:strokeWidth="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_create_binder_save_target_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:lineSpacingExtra="6dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/pretendard_bold"
            android:paddingVertical="14dp"
            android:text="@string/create_binder_save"
            android:textSize="20sp"
            app:cornerRadius="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:onClick="@{() -> vm.showCreateSaveBinderDialog()}" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>