<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.example.mada.feature.binder_save.BinderSaveViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".feature.binder_save.BinderSaveFragment">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_binder_save"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_back"
            app:title="@string/binder_save"
            app:titleCentered="true"
            app:titleTextAppearance="@style/ToolbarTitleText"
            app:titleTextColor="@color/black" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_binder_save">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_binder_save_diary"
                    android:layout_width="100dp"
                    android:layout_height="180dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="76dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_budget_binder"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_binder_save_target_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:text="@string/create_binder_save_name"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@id/iv_binder_save_diary"
                    app:layout_constraintTop_toTopOf="@id/iv_binder_save_diary"
                    app:layout_constraintBottom_toTopOf="@id/tv_binder_save_target_amount_title"/>

                <TextView
                    android:id="@+id/tv_binder_save_target_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_semibold"
                    android:text="@{vm.state.targetName}"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.3"
                    app:layout_constraintStart_toEndOf="@id/tv_binder_save_target_name_title"
                    app:layout_constraintTop_toTopOf="@id/tv_binder_save_target_name_title" />

                <TextView
                    android:id="@+id/tv_binder_save_target_amount_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_semibold"
                    android:text="@string/create_binder_save_target_amount"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@id/tv_binder_save_target_name_title"
                    app:layout_constraintTop_toBottomOf="@id/tv_binder_save_target_name_title"
                    app:layout_constraintBottom_toTopOf="@id/tv_binder_save_target_period_title"/>

                <TextView
                    android:id="@+id/tv_binder_save_target_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_semibold"
                    android:text="@{vm.state.targetAmount}"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="@id/tv_binder_save_target_name"
                    app:layout_constraintTop_toTopOf="@id/tv_binder_save_target_amount_title" />

                <TextView
                    android:id="@+id/tv_binder_save_target_period_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_semibold"
                    android:text="@string/create_binder_save_target_period"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@id/tv_binder_save_target_name_title"
                    app:layout_constraintTop_toBottomOf="@id/tv_binder_save_target_amount_title"
                    app:layout_constraintBottom_toTopOf="@id/tv_binder_save_money_title"/>

                <TextView
                    android:id="@+id/tv_binder_save_target_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_semibold"
                    android:text="@{vm.state.targetPeriod}"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="@id/tv_binder_save_target_name"
                    app:layout_constraintTop_toTopOf="@id/tv_binder_save_target_period_title" />

                <TextView
                    android:id="@+id/tv_binder_save_money_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_semibold"
                    android:text="@string/binder_save_save_money"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@id/tv_binder_save_target_name_title"
                    app:layout_constraintTop_toBottomOf="@id/tv_binder_save_target_period_title"
                    app:layout_constraintBottom_toBottomOf="@id/iv_binder_save_diary" />

                <TextView
                    android:id="@+id/tv_binder_save_target_save_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_semibold"
                    android:text="@{vm.state.saveMoney}"
                    android:textColor="@color/nh_green"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.2"
                    app:layout_constraintStart_toEndOf="@id/tv_binder_save_money_title"
                    app:layout_constraintTop_toTopOf="@id/tv_binder_save_money_title" />

                <ProgressBar
                    android:id="@+id/progress_binder_save"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="56dp"
                    android:indeterminateTint="@color/home_initial_comment"
                    android:max="100"
                    android:progress="@{vm.state.budgetProgress}"
                    android:progressDrawable="@drawable/progress_home"
                    app:layout_constraintTop_toBottomOf="@id/tv_binder_save_money_title" />

                <TextView
                    android:id="@+id/tv_binder_save_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:text="@{vm.state.budgetProgressText}"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/progress_binder_save" />

                <TextView
                    android:id="@+id/tv_binder_save_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:text="@string/binder_save_save_money_history"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@id/progress_binder_save"
                    app:layout_constraintTop_toBottomOf="@id/tv_binder_save_progress" />

                <TextView
                    android:id="@+id/tv_binder_save_history_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="@{vm.state.saveWeek}"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@id/tv_binder_save_history"
                    app:layout_constraintTop_toBottomOf="@id/tv_binder_save_history" />

                <TextView
                    android:id="@+id/tv_binder_save_history_week_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="@{vm.state.saveWeekMoney}"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_binder_save_history_week" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_binder_save_history_week_money"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="22dp"
                    android:background="#EFECEC"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>