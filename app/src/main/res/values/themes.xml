<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MADA" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:toolbarStyle">@style/AOBToolBar</item>
        <item name="colorPrimary">@color/nh_green</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
    </style>

    <!-- ActionBar styles -->
    <style name="AOBToolBar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:titleTextStyle">@style/ToolbarTitleText</item>

        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/ToolbarTitleText</item>
    </style>

    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.MADA" parent="Base.Theme.MADA" />
</resources>